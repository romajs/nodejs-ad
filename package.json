{
  "name": "nodejs-ad",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "coverage": "cd ./api/src && npm run coverage",
    "codecov": "cd ./api/src && npm run codecov",
    "heroku-postbuild": "",
    "heroku-prebuild": "",
    "lint": "eslint ./api/src/ --ignore-path .gitignore",
    "postinstall": "bower install ./web/src/main",
    "start": "node ./api/src/server start",
    "start-dev": "nodemon ./api/src/server start",
    "test": "cd ./api/src && npm test"
  },
  "author": "@romajs",
  "dependencies": {
    "nodejs-ad-api": "file:./api/src",
    "nodejs-ad-web": "file:./web/src"
  },
  "cacheDirectories": [
    "./node_modules",
    "./web/src/main/bower_components"
  ],
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
